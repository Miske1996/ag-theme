{{ 'collectionProductsSwiper.css' | asset_url | stylesheet_tag }}
{{ 'productCard.css' | asset_url | stylesheet_tag }}

<collection-products-swiper>
  <section class="collection-products-swiper">
    {% render 'collectionSwiperHeader', collection: section.settings.collection, header: section.settings.heading, buttons_class:"collection-products-swiper" %}
    <div class="collection-products-swiper__products swiper">
      <ul class="collection-products-swiper__wrapper swiper-wrapper">
        {% for product in section.settings.collection.products %}
          {% render 'productCard', product: product, class: 'swiper-slide' %}
        {% endfor %}
      </ul>
    </div>
  </section>
</collection-products-swiper>
<script src="{{ "CollectionProductsSwiper.js" | asset_url }}" defer></script>
<script src="{{ "ProductCard.js" | asset_url }}" defer></script>

{% schema %}
{
  "name": "Collection swiper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title heading",
      "default": "ðŸŒŸ Trending"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Collection swiper"
    }
  ]
}
{% endschema %}
