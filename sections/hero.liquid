{{ 'hero.css' | asset_url | stylesheet_tag }}

<div class="hero">
  <div class="hero__video">
  {{ section.settings.hero_video | video_tag: autoplay: true, loop: true, muted: true, controls: false  }}
  </div>
    <div class="hero__content">
    <h2 class="hero__title">{{ section.settings.hero_title }}</h2>
    <a href="{{ section.settings.hero_cta-url }}" class="button--secondary">{{ section.settings.hero_cta }}</a>
  </div>
</div>
{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type":"video",
      "id": "hero_video",
      "label": "Hero video"
    },
    {
      "type": "text",
      "id": "hero_title",
      "label": "Hero title",
      "default":"Great things never came from comfort zones."
    },
    {
      "type": "text",
      "id": "hero_cta",
      "label": "Hero cta",
      "default":"Shop Now"
    },
    {
      "type": "text",
      "id": "hero_cta-url",
      "label": "Hero cta url"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
