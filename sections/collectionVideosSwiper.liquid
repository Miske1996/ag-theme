{{ 'collectionVideosSwiper.css' | asset_url | stylesheet_tag }}
{{ 'productVideoCard.css' | asset_url | stylesheet_tag }}

<collection-videos-swiper>
  <section class="collection-videos-swiper">
    {% render 'collectionSwiperHeader', collection: section.settings.collection, header: section.settings.heading, buttons_class:"collection-videos-swiper" %}
    <div class="collection-videos-swiper__products swiper">
      <ul class="collection-videos-swiper__wrapper swiper-wrapper">
        {% for product in section.settings.collection.products %}
          {% render 'productVideoCard', product: product, class: 'swiper-slide' %}
        {% endfor %}
        {% for product in section.settings.collection.products %}
          {% render 'productVideoCard', product: product, class: 'swiper-slide' %}
        {% endfor %}
      </ul>
    </div>
  </section>
</collection-videos-swiper>
<script src="{{ "collectionVideosSwiper.js" | asset_url }}" defer></script>
<script src="{{ "ProductCard.js" | asset_url }}" defer></script>

{% schema %}
{
  "name": "Collection videos swiper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Title heading",
      "default": "Trusted & Proven by Science"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    }
  ],
  "presets": [
    {
      "name": "Collection videos swiper"
    }
  ]
}
{% endschema %}
